NODE_ENV=development
PORT=3000
HOST=0.0.0.0
DATABASE_URL=postgresql://username@localhost:5432/character_creator_dev
JWT_SECRET=your-secret-key-here-change-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://your-auth0-domain.auth0.com/api/v2/
AUTH0_SCOPE=openid profile email
AUTH0_BASE_URL=http://localhost:3000
AUTH0_SESSION_SECRET=your-session-secret-here
AUTH0_ENABLE_TELEMETRY=false
AUTH0_IDP_LOGOUT=true
AUTH0_AUTH_REQUIRED=false

# Local storage settings (no AWS needed)
STORAGE_PROVIDER=local
STORAGE_PATH_CHARACTERS=./uploads/characters
STORAGE_PATH_THUMBNAILS=./uploads/thumbnails
STORAGE_PATH_TEMP=./uploads/temp
STORAGE_PATH_EXPORTS=./uploads/exports

# Google Gemini Official Image Generation API
# Using official Google gemini-2.5-flash-image-preview model
# Correct endpoint from Google official docs: v1beta API
GOOGLE_IMAGE_API_KEY=your-google-api-key-here
GOOGLE_IMAGE_MODEL=gemini-2.5-flash-image-preview
GOOGLE_IMAGE_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-image-preview

# Google Gemini API Configuration for text generation
GOOGLE_API_KEY=your-google-api-key-here

# Proxy Configuration (uncomment and set if behind firewall/proxy)
HTTP_PROXY=http://127.0.0.1:7890
HTTPS_PROXY=http://127.0.0.1:7890
NO_PROXY=localhost,127.0.0.1
